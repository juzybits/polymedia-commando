{
    "private": false,
    "version": "0.0.3",
    "name": "@polymedia/zui",
    "author": "@juzybits (https://polymedia.app)",
    "homepage": "https://github.com/juzybits/polymedia-commando",
    "description": "Sui command line tools for airdrops, data gathering, and more",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/juzybits/polymedia-commando"
    },
    "keywords": [
        "polymedia",
        "sui",
        "commando",
        "zui"
    ],
    "scripts": {
        "zui": "tsc -b && node dist/zui.js",
        "build": "tsc -b",
        "clean": "rm -rf dist/ node_modules/ .turbo/ .wrangler/ src/commands/bulksender/sui/build/",
        "dev": "tsc --watch",
        "lint": "eslint src/ --report-unused-disable-directives --max-warnings 0",
        "prepublishOnly": "rm -rf dist/ && pnpm build",
        "typecheck": "tsc -b"
    },
    "dependencies": {
        "@mysten/sui": "^1.5.0",
        "@polymedia/suitcase-core": "^0.0.15",
        "@polymedia/suitcase-node": "^0.0.15",
        "commander": "^12.1.0",
        "dotenv": "^16.4.5"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.0",
        "@stylistic/eslint-plugin": "^2.6.2",
        "@types/node": "^22.2.0",
        "eslint": "^9.9.0",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.0.1"
    },
    "type": "module",
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist/"
    ],
    "bin": {
        "zui": "./dist/zui.js"
    }
}
