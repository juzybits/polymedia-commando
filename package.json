{
    "private": false,
    "version": "0.0.9",
    "name": "@polymedia/zui",
    "author": "@juzybits (https://polymedia.app)",
    "homepage": "https://github.com/juzybits/polymedia-commando",
    "description": "Sui command line tools for airdrops, data gathering, and more",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/juzybits/polymedia-commando"
    },
    "keywords": [
        "polymedia",
        "sui",
        "commando",
        "zui"
    ],
    "scripts": {
        "build": "tsc --build",
        "clean": "rm -rf dist/ node_modules/ .turbo/ src/commands/bulksender/sui/build/ src/commands/bulksender/sui/Move.lock",
        "dev": "tsc --watch --preserveWatchOutput",
        "lint": "eslint src/ --report-unused-disable-directives --max-warnings 0",
        "prepublishOnly": "pnpm clean && pnpm i && pnpm build",
        "typecheck": "tsc --noEmit",
        "zui": "tsc -b && node dist/zui.js"
    },
    "dependencies": {
        "@mysten/sui": "^1.21.1",
        "@polymedia/suitcase-core": "^0.0.42",
        "@polymedia/suitcase-node": "^0.0.42",
        "commander": "^13.1.0",
        "dotenv": "^16.4.7"
    },
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "@stylistic/eslint-plugin": "^3.0.1",
        "@types/node": "^22.12.0",
        "eslint": "^9.19.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-unused-imports": "^4.1.4",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.22.0"
    },
    "type": "module",
    "sideEffects": false,
    "engines": {
        "node": ">=18"
    },
    "packageManager": "pnpm@9.15.4",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist/"
    ],
    "bin": {
        "zui": "dist/zui.js"
    }
}
